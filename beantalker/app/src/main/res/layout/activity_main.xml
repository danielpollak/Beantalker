<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dan.beantalker.MainActivity"
    android:backgroundTint="@android:color/darker_gray"
    android:background="@color/colorPrimary">
    <Button
        android:id="@+id/scanbutton"
        android:text="@string/searchForBeans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:hapticFeedbackEnabled="false"
        android:fadingEdge="horizontal|vertical" />
    <Button
        android:id="@+id/stop"
        android:text="@string/cancelDiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:hapticFeedbackEnabled="false"
        android:fadingEdge="horizontal|vertical"
        android:onClick="cancelD" />

    <Button
        android:id="@+id/battery"
        android:text="@string/beanBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:hapticFeedbackEnabled="false"
        android:fadingEdge="horizontal|vertical"
        android:onClick="getBeanBattery" />

    <Button
        android:id="@+id/beanPinButton"
        android:text="@string/setBeanPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:elevation="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:hapticFeedbackEnabled="true"
        android:fadingEdge="horizontal|vertical" />
        <!--android:onClick="setBeanPin" /> HERES THE ISSUE: WILL i HAVE TO REMEMBER THE PIN EVERY TIME? AND INPUT IT? i DON'T WANT TO DO THAT. NOW.-->

    <EditText
        android:id="@+id/setBeanPinEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/setBeanPin"
        android:inputType="numberPassword"
        android:imeOptions="actionDone"/>
</LinearLayout>
